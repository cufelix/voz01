    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "@types/cors": "^2.8.17",
    "firebase-functions-test": "^3.1.0"
  },
  "engines": {
    "node": "18"
  }
}